<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.dubytube.dubytube.viewController.ImportController"
      spacing="12" prefWidth="900" prefHeight="600" styleClass="root">

    <padding>
        <Insets top="16" right="16" bottom="16" left="16"/>
    </padding>

    <Label text="Importar catálogo (CSV) — Formato: id,titulo,artista,genero,anio,duracionSeg (con o sin id)"/>

    <HBox spacing="8">
        <Button text="Seleccionar CSV..." onAction="#onElegirArchivo"/>
        <Button text="Importar" onAction="#onImportar"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <Button text="Volver" onAction="#onVolver"/>
    </HBox>

    <Label fx:id="lblArchivo" text="Archivo: (ninguno)"/>
    <Label fx:id="lblResumen" text="Importadas: 0 | Duplicadas: 0 | Erróneas: 0"/>

    <TextArea fx:id="txtLog"
              promptText="Log de importación (errores por línea, avisos, etc.)"
              prefRowCount="20"
              wrapText="true"/>
</VBox>
