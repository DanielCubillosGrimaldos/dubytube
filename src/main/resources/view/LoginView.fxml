<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.shape.*?>

<StackPane prefHeight="650.0" prefWidth="900.0" styleClass="login-container" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.dubytube.dubytube.viewController.LoginController">
   <children>
      <VBox alignment="CENTER" spacing="0" maxWidth="400" styleClass="login-card">
         <children>
            <!-- Logo Section -->
            <VBox alignment="CENTER" spacing="8" VBox.vgrow="NEVER">
               <padding>
                  <Insets bottom="20" />
               </padding>
               
               <!-- Music Icon with Circle Background -->
               <StackPane>
                  <Circle radius="50" fill="#1DB954" />
                  <Text text="♫" fill="WHITE" style="-fx-font-size: 48px; -fx-font-weight: bold;" />
               </StackPane>
               
               <!-- App Title -->
               <Label text="DubyTube" styleClass="title-large">
                  <font>
                     <Font name="System Bold" size="32.0" />
                  </font>
               </Label>
               
               <Label text="Tu plataforma musical definitiva" styleClass="subtitle">
                  <font>
                     <Font size="14.0" />
                  </font>
               </Label>
            </VBox>
            
            <Region prefHeight="30" />
            
            <!-- Login Form -->
            <VBox spacing="16" prefWidth="350">
               <children>
                  <!-- Usuario Field -->
                  <VBox spacing="6">
                     <Label text="Usuario" styleClass="label">
                        <font>
                           <Font name="System Bold" size="13.0" />
                        </font>
                     </Label>
                     <TextField fx:id="txtUser" promptText="Ingresa tu usuario" prefHeight="40" style="-fx-font-size: 14px;">
                        <font>
                           <Font size="14.0" />
                        </font>
                     </TextField>
                  </VBox>
                  
                  <!-- Contraseña Field -->
                  <VBox spacing="6">
                     <Label text="Contraseña" styleClass="label">
                        <font>
                           <Font name="System Bold" size="13.0" />
                        </font>
                     </Label>
                     <PasswordField fx:id="txtPass" promptText="Ingresa tu contraseña" prefHeight="40" style="-fx-font-size: 14px;">
                        <font>
                           <Font size="14.0" />
                        </font>
                     </PasswordField>
                  </VBox>
                  
                  <Region prefHeight="8" />
                  
                  <!-- Login Button -->
                  <Button fx:id="btnLogin" text="Iniciar Sesión" onAction="#onLogin" prefHeight="44" maxWidth="Infinity" styleClass="button-primary" defaultButton="true">
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                  </Button>
                  
                  <!-- Divider -->
                  <HBox alignment="CENTER" spacing="10">
                     <padding>
                        <Insets top="10" bottom="10" />
                     </padding>
                     <Line endX="100" styleClass="divider" />
                     <Label text="o" styleClass="label-secondary" />
                     <Line endX="100" styleClass="divider" />
                  </HBox>
                  
                  <!-- Register Button -->
                  <Button fx:id="btnRegister" text="Crear cuenta nueva" onAction="#onRegister" prefHeight="44" maxWidth="Infinity" styleClass="button-secondary">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Button>
               </children>
            </VBox>
            
            <Region prefHeight="20" />
            
            <!-- Footer -->
            <Label text="© 2025 DubyTube. Todos los derechos reservados." styleClass="label-secondary" textAlignment="CENTER">
               <font>
                  <Font size="11.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets top="40" right="40" bottom="40" left="40" />
         </padding>
      </VBox>
   </children>
</StackPane>
