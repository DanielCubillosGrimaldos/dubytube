<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.dubytube.dubytube.viewController.AvanzadaController"
      spacing="10" prefWidth="900" prefHeight="600">

    <padding><Insets top="16" right="16" bottom="16" left="16"/></padding>

    <Label text="Búsqueda Avanzada (concurrencia AND / OR)"/>

    <GridPane hgap="10" vgap="8">
        <columnConstraints>
            <ColumnConstraints percentWidth="15"/>
            <ColumnConstraints percentWidth="35"/>
            <ColumnConstraints percentWidth="15"/>
            <ColumnConstraints percentWidth="35"/>
        </columnConstraints>

        <Label text="Artista" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="txtArtista" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Género" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
        <TextField fx:id="txtGenero" GridPane.rowIndex="0" GridPane.columnIndex="3"/>

        <Label text="Año mín" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="txtAnioMin" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Año máx" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
        <TextField fx:id="txtAnioMax" GridPane.rowIndex="1" GridPane.columnIndex="3"/>
    </GridPane>

    <HBox spacing="8">
        <Label text="Lógica"/>
        <ChoiceBox fx:id="choiceLogica"/>
        <Button text="Buscar" onAction="#onBuscar"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <Button text="Volver" onAction="#onVolver"/>
    </HBox>

    <TableView fx:id="tblResultados" prefHeight="420">
        <columns>
            <TableColumn fx:id="colTitulo"  text="Título"   prefWidth="240"/>
            <TableColumn fx:id="colArtista" text="Artista"  prefWidth="220"/>
            <TableColumn fx:id="colGenero"  text="Género"   prefWidth="160"/>
            <TableColumn fx:id="colAnio"    text="Año"      prefWidth="80"/>
        </columns>
    </TableView>
</VBox>
