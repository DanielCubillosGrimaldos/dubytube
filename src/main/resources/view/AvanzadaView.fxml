<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.dubytube.dubytube.viewController.AvanzadaController">
    <children>
        <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.rightAnchor="10"
              AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10">
            <padding><Insets top="12" right="12" bottom="12" left="12"/></padding>

            <!-- Filtros -->
            <GridPane hgap="8" vgap="8">
                <columnConstraints>
                    <ColumnConstraints minWidth="100" prefWidth="150"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>

                <children>
                    <Label text="Artista" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtArtista" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Género" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtGenero" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Año min" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtAnioMin" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label text="Año max" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtAnioMax" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                    <HBox spacing="12" GridPane.rowIndex="4" GridPane.columnIndex="0">
                        <children>
                            <RadioButton fx:id="rbAND" text="AND" />
                            <RadioButton fx:id="rbOR"  text="OR"  selected="true"/>
                        </children>
                    </HBox>

                    <Button text="Buscar" onAction="#onBuscarAvanzado"
                            GridPane.rowIndex="4" GridPane.columnIndex="1"
                            maxWidth="Infinity"/>
                </children>
            </GridPane>

            <!-- Resultados -->
            <TableView fx:id="tblAvanzada" prefHeight="400"/>
        </VBox>
    </children>
</AnchorPane>
