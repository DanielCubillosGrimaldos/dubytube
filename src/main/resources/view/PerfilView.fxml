<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.dubytube.dubytube.viewController.PerfilController"
      spacing="10">
    <padding><Insets top="12" right="12" bottom="12" left="12"/></padding>

    <Label fx:id="lblInfo" text="Mi Perfil" style="-fx-font-size:18px; -fx-font-weight:bold;"/>

    <HBox spacing="8">
        <Button text="Quitar seleccionado" onAction="#onQuitar"/>
        <Button text="Exportar favoritos" onAction="#onExportar"/>
    </HBox>

    <TableView fx:id="tblFav" prefHeight="460">
        <columns>
            <TableColumn text="ID" prefWidth="120"/>
            <TableColumn text="Título" prefWidth="260"/>
            <TableColumn text="Artista" prefWidth="220"/>
            <TableColumn text="Género" prefWidth="140"/>
            <TableColumn text="Año" prefWidth="80"/>
        </columns>
    </TableView>
</VBox>
