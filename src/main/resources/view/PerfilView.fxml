<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.dubytube.dubytube.viewController.PerfilController"
      spacing="10">
    <padding><Insets top="12" right="12" bottom="12" left="12"/></padding>

    <HBox spacing="8">
        <Label text="Mis favoritos" style="-fx-font-size:18px; -fx-font-weight:bold;"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <Button text="Exportar CSV" onAction="#onExport"/>
        <Button text="Volver" onAction="#onVolver"/>
    </HBox>

    <TableView fx:id="tblFav" prefHeight="520">
        <columns>
            <TableColumn fx:id="colTitulo"  text="Título"  prefWidth="280"/>
            <TableColumn fx:id="colArtista" text="Artista" prefWidth="220"/>
            <TableColumn fx:id="colGenero"  text="Género"  prefWidth="140"/>
            <TableColumn fx:id="colAnio"    text="Año"     prefWidth="80"/>
            <TableColumn fx:id="colAccion"  text="Acción"  prefWidth="120"/>
        </columns>
    </TableView>
</VBox>
