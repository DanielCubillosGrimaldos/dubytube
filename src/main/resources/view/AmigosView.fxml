            </Button>
        </HBox>
    </VBox>

    <!-- Add Friend Section -->
    <VBox spacing="12" styleClass="card">
        <Label text="AGREGAR AMIGO" styleClass="label" style="-fx-font-weight: bold; -fx-font-size: 12px; -fx-text-fill: -fx-text-secondary;" />
        
        <HBox spacing="12" alignment="CENTER_LEFT">
            <VBox spacing="6" HBox.hgrow="ALWAYS">
                <Label text="Username del amigo" styleClass="label" style="-fx-font-weight: bold; -fx-font-size: 13px;"/>
